    <div class="content">
        <h1>Welcome to Rails Pr</h1>
        <p>Select a tab to view users or lab reports.</p>
        <br><br>
        <nav class="nav-menu">
            <ul>
                <li><a href="/users">Users</a></li>
                <li><a href="/lab_reports">Lab Reports</a></li>
            </ul>
        </nav>
    </div>
